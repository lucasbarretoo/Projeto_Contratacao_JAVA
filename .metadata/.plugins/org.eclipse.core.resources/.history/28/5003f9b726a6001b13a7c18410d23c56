package entities;

import static entities.enums.Status.PENDENTE;
import static entities.enums.Status.DEMITIDO;
import static entities.enums.Status.CONTRATADO;

import java.util.ArrayList;
import java.util.Date;
import java.util.List;

import entities.enums.Cargo;
import entities.enums.Status;

public class Contratacao {
	private Date Data;
	private Cargo Cargo;
	private Status Status;
	private Projeto Projeto;
	private List<Funcionario> ListaFuncionarios = new ArrayList<>();
	
	public Date getData() {
		return Data;
	}
	public void setData(Date data) {
		Data = data;
	}
	public Cargo getCargo() {
		return Cargo;
	}
	public void setCargo(Cargo cargo) {
		Cargo = cargo;
	}
	public Status getStatus() {
		return Status;
	}
	public void setStatus(Status status) {
		Status = status;
	}
	
	@Override
	public String toString() {
		return "Contratacao [Data=" + Data + ", Cargo=" + Cargo + ", Status=" + Status + ", Projeto=" + Projeto
				+ ", ListaFuncionarios=" + ListaFuncionarios + "]";
	}
	@Override
	public int hashCode() {
		final int prime = 31;
		int result = 1;
		result = prime * result + ((Cargo == null) ? 0 : Cargo.hashCode());
		result = prime * result + ((Data == null) ? 0 : Data.hashCode());
		result = prime * result + ((ListaFuncionarios == null) ? 0 : ListaFuncionarios.hashCode());
		result = prime * result + ((Projeto == null) ? 0 : Projeto.hashCode());
		result = prime * result + ((Status == null) ? 0 : Status.hashCode());
		return result;
	}
	@Override
	public boolean equals(Object obj) {
		if (this == obj)
			return true;
		if (obj == null)
			return false;
		if (getClass() != obj.getClass())
			return false;
		Contratacao other = (Contratacao) obj;
		if (Cargo != other.Cargo)
			return false;
		if (Data == null) {
			if (other.Data != null)
				return false;
		} else if (!Data.equals(other.Data))
			return false;
		if (ListaFuncionarios == null) {
			if (other.ListaFuncionarios != null)
				return false;
		} else if (!ListaFuncionarios.equals(other.ListaFuncionarios))
			return false;
		if (Projeto == null) {
			if (other.Projeto != null)
				return false;
		} else if (!Projeto.equals(other.Projeto))
			return false;
		if (Status != other.Status)
			return false;
		return true;
	}

	public Projeto getProjeto() {
		return Projeto;
	}
	public void setProjeto(Projeto projeto) {
		Projeto = projeto;
	}
	
	public Contratacao(Date DATA, Cargo CARGO, Funcionario FUNCIONARIO, Projeto PROJETO) {
		this.setData(DATA);
		this.setCargo(CARGO);
		this.contratar();
		this.ListaFuncionarios.add(FUNCIONARIO);
		this.setProjeto(PROJETO);
	}
	public void pendente() {
		if(this.getStatus() != PENDENTE) {
			this.setStatus(PENDENTE);
		}else {
			System.out.println("Não foi possivel realizar alteração de Status para 'PENDENTE'");
		}
	}
	public void contratar() {
		if(this.getStatus() != CONTRATADO) {
			this.setStatus(CONTRATADO);
		}else {
			System.out.println("Não foi possivel realizar alteração de Status para 'CONTRATADO'");
		}
	}
	public void demitir() {
		if(this.getStatus() == CONTRATADO) {
			this.setStatus(DEMITIDO);
		}else {
			System.out.println("Não foi possivel realizar alteração de Status para 'DEMITIDO'");
		}
	}
	public List<Funcionario> getListaFuncionarios() {
		return ListaFuncionarios;
	}
	public void setListaFuncionarios(List<Funcionario> listaFuncionarios) {
		ListaFuncionarios = listaFuncionarios;
	}
}
